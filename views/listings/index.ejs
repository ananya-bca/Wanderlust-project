<% layout("/layouts/boilerplate") %>
<style>
  
#filters {
    display: flex;
    flex-wrap: nowrap; /* Ensure items stay in a single row */
    overflow-x: auto; /* Enable horizontal scrolling */
    -webkit-overflow-scrolling: touch; /* Enable smooth scrolling on iOS */
    padding-bottom: 1rem; /* Add some padding at the bottom to prevent clipping */
    scrollbar-width: none; /* Hide scrollbar for Firefox */
}

.filter {
    text-align: center;
    margin-right: 1rem;
    margin-top: 1rem;
    opacity: 0.7;
    flex: 0 0 auto; /* Let items shrink and grow as needed */
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

.filter p {
    font-size: 0.8rem;
}

.tax-toogle {
    display: flex;
    flex-direction: column;
    margin-top: 1rem; 
    text-align: center;
    align-items: center;
    justify-content: center;
    border: 1px solid black ;
    border-radius: 1rem;
    height: 3rem;
    padding: 0.4rem;
    margin-left: 6rem;
    display: flex;
    align-items: center;
}

.tax-toogle .form-check-reverse {
    margin-top: 0.5rem; /* Adjust spacing for the form check */
}

/* Media Query for smaller screen sizes */
@media screen and (max-width: 768px) {
    #filters {
        flex-wrap: nowrap; /* Ensure items stay in a single row */
        justify-content: flex-start; /* Start from the beginning */
        overflow-x: auto; /* Enable scrolling for small devices */
    }
    
    .tax-toogle {
        display: none; /* Hide the tax-toogle section on smaller screens */
    }
}
.tax-info{
  display: none;
}


/* Hide scrollbar for Chrome, Safari, and Opera */
#filters::-webkit-scrollbar {
    display: none;
}

/* Hide scrollbar for IE, Edge, and Firefox */
#filters {
    scrollbar-width: none;
}

</style>
<div id="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic city</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </div>
    <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
    </div>
    <div class="tax-toogle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <div id="container">
        <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      </div>
      
      <div class="card-img-overlay"><i class="ri-heart-fill"></i></div>
      <div class="card-body">
        <p class="card-text">
          <strong><%= listing.title %></strong><br><span style="color: grey;"><%= listing.country %></span>
          <div class="price" style="margin-top: -12px;">&#8377; <%= listing.price.toLocaleString("en-IN") %> night<br></div>
          <span class="tax-info" style="text-decoration: underline;">&#8377; <%= (listing.price*1.18).toLocaleString("en-IN") %> &nbsp;after adding taxes</span>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
